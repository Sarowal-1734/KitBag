<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/layoutBackground"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo"
        app:civ_border_color="@color/app_bar"
        app:civ_border_width="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="@string/become_a_deliveryman_nin_three_easy_steps"
        android:textColor="@color/app_bar"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView" />

    <ImageView
        android:id="@+id/imageViewNode1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/ic_tracker_node" />

    <TextView
        android:id="@+id/textViewStep1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/take_photo_of_your_nid"
        android:textColor="?attr/textColor"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewNode1"
        app:layout_constraintStart_toEndOf="@+id/imageViewNode1"
        app:layout_constraintTop_toTopOf="@+id/imageViewNode1" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewNode1"
        app:layout_constraintEnd_toEndOf="@+id/imageViewNode1"
        app:layout_constraintStart_toStartOf="@+id/imageViewNode1"
        app:layout_constraintTop_toTopOf="@+id/imageViewNode1" />

    <View
        android:id="@+id/view2"
        android:layout_width="2dp"
        android:layout_height="16dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="@+id/imageViewNode1"
        app:layout_constraintStart_toStartOf="@+id/imageViewNode1"
        app:layout_constraintTop_toBottomOf="@+id/imageViewNode1" />

    <ImageView
        android:id="@+id/imageViewNode2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:srcCompat="@drawable/ic_tracker_node" />

    <TextView
        android:id="@+id/textViewStep2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/take_a_photo_of_your_face"
        android:textColor="?attr/textColor"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewNode2"
        app:layout_constraintStart_toEndOf="@+id/imageViewNode2"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewNode2"
        app:layout_constraintEnd_toEndOf="@+id/imageViewNode2"
        app:layout_constraintStart_toStartOf="@+id/imageViewNode2"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <View
        android:id="@+id/view3"
        android:layout_width="2dp"
        android:layout_height="16dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="@+id/imageViewNode2"
        app:layout_constraintStart_toStartOf="@+id/imageViewNode2"
        app:layout_constraintTop_toBottomOf="@+id/imageViewNode2" />

    <ImageView
        android:id="@+id/imageViewNode3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        app:srcCompat="@drawable/ic_tracker_node" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewNode3"
        app:layout_constraintEnd_toEndOf="@+id/imageViewNode3"
        app:layout_constraintStart_toStartOf="@+id/imageViewNode3"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <TextView
        android:id="@+id/textViewStep3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/fill_in_required_information"
        android:textColor="?attr/textColor"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewNode3"
        app:layout_constraintStart_toEndOf="@+id/imageViewNode3"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <Button
        android:id="@+id/buttonProceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:text="@string/proceed"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewStep3" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/red"
        android:text="@string/cancel"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/buttonProceed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonProceed" />

</androidx.constraintlayout.widget.ConstraintLayout>